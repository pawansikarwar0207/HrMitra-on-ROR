<div class="container mt-3 mb-5">
<div class="col-lg-12">
		<div class="card rounded-0 mb-5">
			<div class="card-title">
				<h1 class="text-center mt-3">Listing Document</h1>
			</div>
		</div>
		<%= link_to 'Create Documents', new_document_path,class: "btn btn-primary mb-4" %>	
		<table class="table table-bordered">
			<thead>
				<tr>
					<th></th>
					<th>Student Id</th>
					<th>Document Name</th>
					<th>Doc Type</th>
					<th>Student Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @documents.each do |document| %>
					<tr>
						<td>
							<div class="form-check">
							  <input class="form-check-input document-select-check" type="checkbox"  id="document<%= document.id%>" data-document-id="<%= document.id%>">
							  <label class="form-check-label" for="book_<%= document.id%>" data-document-id="<%= document.id%>">
							  </label>
								</td>
						<td><%= document.student_id %></td>
						<td><%= document.name %></td>
						<td><%= document.doc_type %></td>
						<td><%= link_to document.student.full_name, student_path(document.student) %></td>
							<td>
								<div class="dropdown">
                  <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Actions
                  </button>
                  <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton1">
                    <li><%= link_to "Show", document, class:"dropdown-item"%></li>
                    <li><%= link_to "Edit", edit_document_path(document), class:"dropdown-item" %></li>
                    <li><%= link_to 'Delete',document_path(document),class:"dropdown-item", data: { turbo_confirm: 'Are you sure ?', turbo_method: :delete } %></li>
                  </ul>
                </div> 
              	</td>
              </tr>
				<% end %>
			</tbody>
		</table>	
		<button type="button" class="btn btn-danger" id="delete-documents" style="display: none;" >Delete Document</button>
</div>
</div>
<style>
.modal-backdrop.show{
	z-index: unset;
}
</style>