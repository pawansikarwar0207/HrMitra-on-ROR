<div class="container mt-4 mb-4">
	<div class="col-lg-12 ">
		<div class="card  mt-4 mb-4">
			<h1 class="text-center mt-3">Document</h1>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-lg-5">
					<p><strong>Name:</strong>  <%= @document.name %> </p>
					<p><strong>Doc Type:</strong>  <%= @document.doc_type %> </p>
					<p><strong>Student Id:</strong>  <%= @document.student_id %> </p>
				</div>
				<div class="col-lg-5">
					<% if @document.image.attached? %>
					<%= image_tag @document.image %>
					<% end -%>
				</div>
			</div>			
		</div>
	</div>	
</div>

<div class="container mt-4 mb-4">b

	<%= link_to 'Edit', edit_document_path, class: "btn btn-primary" %>
	<%= link_to 'Back', documents_path, class: "btn btn-primary" %>
	<%= link_to 'Delete',@document, class: "btn btn-primary", data: { turbo_confirm: 'Are you sure ?', turbo_method: :delete } %>
</div>