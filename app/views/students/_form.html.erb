
<%= form_with model: student do |form| %>

<% if @student.errors.any? %>
	<% @student.errors.full_messages.each do |message| %>
	<p><%= message%> </p>
	<% end %>
<% end %>


<div class="container mt-3 mb-3">
	<div class="row">
		<div class="col-lg-4">
			<div class="form-group">
				<%= form.label :first_name %>
				<%= form.text_field :first_name, class: "form-control " %>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="form-group">
				<%= form.label :middle_name %>
				<%= form.text_field :middle_name, class: "form-control " %>
			</div>
		</div>

			<div class="col-lg-4">
			<div class="form-group">
				<%= form.label :last_name %>
				<%= form.text_field :last_name, class: "form-control " %>
			</div>
		</div>
	</div>
</div>

<div class="container mt-3 mb-3">
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :personal_email %>
				<%= form.email_field :personal_email, class:"form-control " %>
			</div>			
		</div>

		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :contact_number %>
				<%= form.text_field :contact_number, class:"form-control " %>
			</div>
		</div>
	</div>
</div>


<div class="container mt-3 mb-3">
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :address_line_1 %>
				<%= form.text_field :address_line_1, class:"form-control " %>
			</div>			
		</div>

		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :address_line_2 %>
				<%= form.text_field :address_line_2, class:"form-control " %>
			</div>
		</div>
	</div>
</div>


<div class="container mt-3 mb-3">
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :city %>
				<%= form.text_field :city, class:"form-control " %>
			</div>			
		</div>

		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :state %>
				<%= form.text_field :state, class:"form-control " %>
			</div>
		</div>
	</div>
</div>

<div class="container mt-3 mb-3">
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :country %>
				<%= form.text_field :country, class:"form-control " %>
			</div>			
		</div>

		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :zipcode %>
				<%= form.text_field :zipcode, class:"form-control" %>
			</div>
		</div>
	</div>
</div>


<div class="form-group">
	<%= form.submit class: "btn btn-primary" %>
	<%= link_to 'Back', students_path, class: "btn btn-primary" %>
</div>
<% end -%>