<div class="col-lg-6 mx-lg-auto mb-5">
<div class="card shadow">
  <div class="card-header">
    <h3 class="card-title text-center fw-bold">Sign Up</h3>
  </div>
  <div class="card-body">
    

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "student_users/shared/error_messages", resource: resource %>

        <div class="form-group mb-2">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class:"form-control mt-2" %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class:"form-control mt-2" %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :contact_number %>
          <%= f.text_field :contact_number, class:"form-control mt-2" %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :address %>
          <%= f.text_field :address, class:"form-control mt-2" %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :username %>
          <%= f.text_field :username, class:"form-control mt-2" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-2  mt-2" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-2  mt-2" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-2 mt-2" %>
        </div>

        <div class="form-group mb-2 mt-2">
          <%= f.radio_button :role, 'admin' %>
          <%= f.label :is_admin? %>
        </div>


        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-primary mb-2 mt-2" %>
          <%= link_to 'Back to Log In',new_student_user_session_path, class:"btn btn-primary mb-2 mt-2" %>
        </div>
      <% end %>

      
  </div>
</div>
</div>






