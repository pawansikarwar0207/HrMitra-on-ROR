<div class="col-lg-6 mx-lg-auto mb-5">
  <div class="card shadow">
    <div class="card-header">
      <h3 class="card-title text-center fw-bold">Change your password</h3>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "student_users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"form-control mt-2 mb-3" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control mt-2 mb-3" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class:"btn btn-primary mb-2" %>
        </div>
      <% end %>

      <%= render "student_users/shared/links" %>


    </div>
  </div>
</div>



















































