<div class="col-lg-12 mb-4">
	<div class="card shadow mt-3">
		<div class="card-title mt-3">
			<h1 class="text-center fw-bold">Listing Trainees</h1>
		</div>
	</div>


	<%= link_to 'Create New Trainee', new_admin_trainee_path, class:"btn btn-primary mt-4 mb-3" %>
	<div class="row">
		<% @trainees.each do |trainee| %>	
		<div class="col-lg-4 mt-3 mb-3">
			<div class="card shadow">
				<div class="card-body">
					<strong>Name :</strong><%= trainee.name %><br>
					<strong>Email :</strong><%= trainee.email %><br>
					<strong>Address :</strong><%= trainee.address %><br>
					<strong>Contact Number :</strong><%= trainee.contact_number %><br>
					<strong>College Name :</strong><%= trainee.college_name %><br>
					<strong>Course Name :</strong><%= trainee.course_name %><br>
					<%= link_to "Show", admin_trainee_path(trainee), class:"btn btn-primary btn-sm mt-2"%>
					<%= link_to "Edit", edit_admin_trainee_path(trainee), class:"btn btn-primary btn-sm mt-2" %>
					<%= link_to 'Delete',admin_trainee_path(trainee),class:"btn btn-primary btn-sm mt-2", data: { turbo_confirm: 'Are you sure ?', turbo_method: :delete } %>
				</div>
			</div>	
		</div>
		<% end -%>
	</div>

</div>



